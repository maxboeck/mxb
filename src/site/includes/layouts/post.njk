---
layout: base
---
<article 
    id="post-{{ page.slug }}" 
    class="post h-entry" 
    role="article" 
    itemscope 
    itemtype="http://schema.org/BlogPosting" 
    aria-labelledby="{{ page.slug }}-title" 
    data-cached
>
    <header class="post__header container">
        <h1 id="{{ page.slug }}-title" class="post__title p-name title" itemprop="headline">{{ page.title }}</h1>
        <div class="post__meta">

            <time class="post__date dt-published" itemprop="datePublished" datetime="{{ page.date | date_to_xmlschema }}">{{
                page.date | date: "%B %-d, %Y" }}</time>

            {% if page.category %}
            &sdot; <span class="post__category p-category">{{ page.category | capitalize }}</span>
            {% endif %}

            {% if page.demo %}
            <a href="{{ page.demo }}" class="btn btn--primary post__demo" target="_blank" rel="noopener noreferrer">View
                Demo</a>
            {% endif %}

        </div>
    </header>

    <div class="post__content e-content content" itemprop="articleBody">
        {{ content }}
    </div>

    <div class="post__footer container">

        <div class="post__reldata" hidden>
            <a class="u-url" href="{{ page.url|prepend:site.url }}">{{ page.title }}</a>
            <p class="h-card p-author">
                <a class="p-name u-url" rel="author" href="{{ site.url }}">Max B&ouml;ck</a>
                <img class="u-photo" src="{{ "/assets/images/max_boeck.jpg"|prepend:site.url }}" />
            </p>
        </div>

        <p>
            <small>Published in [{{ page.category }}] &sdot; {{ page.date | date: "%d %b %Y" }}</small>
        </p>

        <a href="https://twitter.com/intent/follow?screen_name=mxbck" target="_blank" rel="noopener noreferrer" title="Follow Max BÃ¶ck on Twitter"
            class="btn btn--twitter">
            {% include icon.html icon="twitter" %} Follow @{{ site.twitter.username }}
        </a>
    </div>
</article>

<section class="blogsection" id="webmentions">
    <h3 class="blogsection__title" id="wm-title">Webmentions</h3>
    {% include webmentions.html %}
</section>

<section class="blogsection" id="related-posts">
    <h3 class="blogsection__title" id="relatedposts-title">Other things I've written</h3>
    {% include related-posts.html %}
</section>